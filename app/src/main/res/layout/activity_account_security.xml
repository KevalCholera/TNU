<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clAccountSecurity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include
            layout="@layout/element_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/lyPaddingMainAll">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/lyAccountSecurityMarginBottomAll"
                    android:text="@string/email_id"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/tvHeadingSizeAll" />

                <EditText
                    android:id="@+id/etAccountSecurityEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_gravity="center"
                    android:background="@drawable/grayborder"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                    android:text="@string/johnsmith_gmail_com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etSignInUserPassSize" />

                <Button
                    android:id="@+id/btAccountSecurityChangeEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btSignUpAllheight"
                    android:layout_marginTop="@dimen/btSignUpAllMarginTop"
                    android:background="@drawable/yellow"
                    android:paddingEnd="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:paddingStart="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:text="@string/change_email"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btSignInSignUpSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/lyAccountSecurityMarginBottomAll"
                    android:layout_marginTop="@dimen/vtvAccountSecurityMarginTopBottomAll"
                    android:text="@string/alternate_email_id"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/tvHeadingSizeAll" />

                <EditText
                    android:id="@+id/etAccountSecurityAlternateEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_gravity="center"
                    android:background="@drawable/grayborder"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                    android:text="@string/johnsmith123_gmail_com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etSignInUserPassSize" />

                <Button
                    android:id="@+id/btAccountSecurityChangeAlternateEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btSignUpAllheight"
                    android:layout_marginTop="@dimen/btSignUpAllMarginTop"
                    android:background="@drawable/yellow"
                    android:paddingEnd="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:paddingStart="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:text="@string/change_alternate_email"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btSignInSignUpSize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vHeightWidthAll"
                    android:layout_marginBottom="@dimen/vtvAccountSecurityMarginTopBottomAll"
                    android:layout_marginTop="@dimen/vtvAccountSecurityMarginTopBottomAll"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/lyAccountSecurityMarginBottomAll"
                    android:text="@string/security_question_1"
                    android:textSize="@dimen/tvHeadingSizeAll" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAccountSecurityQuestion1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="@string/in_which_city_or_town_did_your_mother_and_father_live"
                        android:textColor="@color/black"
                        android:textSize="@dimen/etSignInUserPassSize" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/lyAccountSecurityMarginBottomAll"
                    android:layout_marginTop="10dp"
                    android:text="@string/security_question_2"
                    android:textSize="@dimen/tvHeadingSizeAll" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAccountSecurityQuestion2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="@string/in_which_city_or_town_did_your_mother_and_father_live"
                        android:textColor="@color/black"
                        android:textSize="@dimen/etSignInUserPassSize" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7" />

                </LinearLayout>

                <Button
                    android:id="@+id/btAccountSecurityChangeQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btSignUpAllheight"
                    android:layout_marginTop="@dimen/btSignUpAllMarginTop"
                    android:background="@drawable/yellow"
                    android:paddingEnd="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:paddingStart="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:text="@string/change_security_question"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btSignInSignUpSize" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vHeightWidthAll"
                    android:layout_marginBottom="@dimen/vtvAccountSecurityMarginTopBottomAll"
                    android:layout_marginTop="@dimen/vtvAccountSecurityMarginTopBottomAll"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/btAccountSecurityChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btSignUpAllheight"
                    android:layout_marginTop="@dimen/btSignUpAllMarginTop"
                    android:background="@drawable/yellow"
                    android:paddingEnd="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:paddingStart="@dimen/btAccountSecurityPaddingEndStartAll"
                    android:text="@string/change_password"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btSignInSignUpSize" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vHeightWidthAll"
                    android:layout_marginBottom="@dimen/vtvAccountSecurityMarginTopBottomAll"
                    android:layout_marginTop="@dimen/vtvAccountSecurityMarginTopBottomAll"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tvAccountSecurityNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/cbAccountSecurityOrganization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cbCheckboxMarginTopAll"
                    android:button="@drawable/checkbox"
                    android:paddingStart="@dimen/lyAccountSecurityCheckTextMarginStartTop"
                    android:text="@string/ReceiveOffersFromOrganization"
                    android:textSize="@dimen/tvAccountSecurityCheckTextSizeAll" />


                <CheckBox
                    android:id="@+id/cbAccountSecurityTaxinearu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lyAccountSecurityCheckTextMarginStartTop"
                    android:button="@drawable/checkbox"
                    android:paddingStart="@dimen/lyAccountSecurityCheckTextMarginStartTop"
                    android:text="@string/yes_i_would_like_to_receive_offers_and_infromation_about_products_and_services_about_taxinearu"
                    android:textSize="@dimen/tvAccountSecurityCheckTextSizeAll" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>