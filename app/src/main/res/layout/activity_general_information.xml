<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clGeneralInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/element_appbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/lyPaddingMainAll">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textHead" />

            <EditText
                android:id="@+id/etGeneralFirstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginRight="@dimen/etSignUpPersonNameMarginEnd"
                android:layout_marginTop="@dimen/etSignUpPersonNameMarginEnd"
                android:background="@drawable/grayborder"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:inputType="textCapSentences"
                android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textDetail" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvbtGeneralInfoMarginTopAll"
                android:text="@string/last_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textHead" />

            <EditText
                android:id="@+id/etGeneralLastName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginRight="@dimen/etSignUpPersonNameMarginEnd"
                android:layout_marginTop="@dimen/etSignUpPersonNameMarginEnd"
                android:background="@drawable/grayborder"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:inputType="textCapSentences"
                android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textDetail" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvbtGeneralInfoMarginTopAll"
                android:text="@string/contact_no"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textHead" />

            <EditText
                android:id="@+id/etGeneralMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginRight="@dimen/etSignUpPersonNameMarginEnd"
                android:layout_marginTop="@dimen/etSignUpPersonNameMarginEnd"
                android:background="@drawable/grayborder"
                android:digits="1234567890"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textDetail" />

            <Button
                android:id="@+id/btGeneralUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginTop="@dimen/tvbtGeneralInfoMarginTopAll"
                android:background="@color/Yellow"
                android:text="@string/update_profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textButton" />


        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>