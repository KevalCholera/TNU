<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/imgappbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlBookFromTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginStart="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginTop="@dimen/lySearchFromToMarginTop">

            <LinearLayout
                android:id="@+id/lyBookFromTo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grayborder"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvBookFrom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:background="@null"
                    android:drawablePadding="@dimen/tvMarginTopBottomStartEndAll"
                    android:drawableStart="@mipmap/imgfromto"
                    android:gravity="fill"
                    android:hint="@string/from"
                    android:paddingStart="@dimen/etSignInUserPasswordPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etSignInUserPassSize" />


                <LinearLayout
                    android:id="@+id/llBookView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/llBookViewHeight"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/vSearchFromToHeight"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:background="@color/light_Gray" />

                    <ImageView
                        android:id="@+id/imgBookFromToReverse"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:src="@mipmap/reverse" />

                    <View
                        android:id="@+id/vBookMiddle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/vSearchFromToHeight"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:background="@color/light_Gray" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvBookTo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:background="@null"
                    android:drawablePadding="@dimen/tvMarginTopBottomStartEndAll"
                    android:drawableStart="@mipmap/imgfromto"
                    android:gravity="fill"
                    android:hint="@string/to"
                    android:paddingStart="@dimen/etSignInUserPasswordPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etSignInUserPassSize" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivBookVia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="fill_vertical"
                android:layout_marginEnd="@dimen/ivBookViaMarginEnd"
                android:layout_marginTop="@dimen/ivBookViaMarginTop"
                android:src="@mipmap/imgbtnvia"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vBookViewHeight"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/lyBookFromTo"
                android:background="@null" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llBookVia1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/etHeightAll"
            android:layout_marginEnd="@dimen/tvSearchAllMarginStartEnd"
            android:layout_marginStart="@dimen/tvSearchAllMarginStartEnd"
            android:background="@drawable/grayborder"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvBookvia1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@null"
                android:drawablePadding="@dimen/etBookviaDrawablePadding"
                android:drawableStart="@mipmap/imgvia"
                android:gravity="fill"
                android:hint="@string/via1"
                android:padding="@dimen/tvSearchAllPadding"
                android:paddingStart="@dimen/ivetBookViaPaddingStart"
                android:textSize="@dimen/tvSearchAllSize" />

            <ImageView
                android:id="@+id/ivBookDeleteVia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:padding="@dimen/ivBookDeleteViaPadding"
                android:src="@mipmap/imgdelete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBookVia2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/etHeightAll"
            android:layout_marginEnd="@dimen/tvSearchAllMarginStartEnd"
            android:layout_marginStart="@dimen/tvSearchAllMarginStartEnd"
            android:layout_marginTop="@dimen/llBookVia2MarginTop"
            android:background="@drawable/grayborder"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvBookvia2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@null"
                android:drawablePadding="@dimen/etBookviaDrawablePadding"
                android:drawableStart="@mipmap/imgvia"
                android:gravity="fill"
                android:hint="@string/via2"
                android:padding="@dimen/tvSearchAllPadding"
                android:paddingStart="@dimen/ivetBookViaPaddingStart"
                android:textSize="@dimen/tvSearchAllSize" />

            <ImageView
                android:id="@+id/ivBookDeleteVia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:padding="@dimen/ivBookDeleteViaPadding"
                android:src="@mipmap/imgdelete" />

        </LinearLayout>


        <RadioGroup
            android:id="@+id/llBookNowTodayTomorrow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/etHeightAll"
            android:layout_marginEnd="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginStart="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginTop="@dimen/lySearchNowTodayTomorrowMaginTop"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbBookNow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_book"
                android:button="@drawable/radio_book"
                android:checked="true"
                android:gravity="center"
                android:text="@string/now"
                android:textColor="@drawable/radio_book"
                android:textSize="@dimen/etSignInUserPassSize"
                tools:ignore="NestedWeights" />

            <RadioButton
                android:id="@+id/rbBookToday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_book"
                android:button="@drawable/radio_book"
                android:gravity="center"
                android:text="@string/today"
                android:textColor="@drawable/radio_book"
                android:textSize="@dimen/etSignInUserPassSize" />


            <RadioButton
                android:id="@+id/rbBookTomorrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_book"
                android:button="@drawable/radio_book"
                android:gravity="center"
                android:text="@string/tomorrow"
                android:textColor="@drawable/radio_book"
                android:textSize="@dimen/etSignInUserPassSize" />

        </RadioGroup>

        <TextView
            android:id="@+id/tvBookDateTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/etHeightAll"
            android:layout_marginEnd="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginStart="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginTop="@dimen/lySearchDateTimeMaginTop"
            android:background="@drawable/grayborder"
            android:drawableLeft="@mipmap/imgtime"
            android:drawablePadding="@dimen/tvMarginTopBottomStartEndAll"
            android:gravity="fill"
            android:hint="@string/datetime"
            android:inputType="datetime"
            android:paddingStart="@dimen/etSignInUserPasswordPaddingStartEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/etSignInUserPassSize" />

        <LinearLayout
            android:id="@+id/llBookLuggagePassenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginStart="@dimen/lySearchAllMarginStartEnd"
            android:layout_marginTop="@dimen/lySearchLuggagePassengerMarginTop"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBookLuggage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginEnd="@dimen/tvMarginTopBottomStartEndAll"
                android:layout_weight="1"
                android:background="@drawable/grayborder"
                android:drawableLeft="@mipmap/baggage"
                android:drawablePadding="@dimen/tvSearchCarsPaddingTopBottom"
                android:gravity="fill"
                android:hint="@string/luggage"
                android:inputType="text"
                android:paddingStart="@dimen/etSignInUserPasswordPaddingStartEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/etSignInUserPassSize" />

            <TextView
                android:id="@+id/tvBookPassenger"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginStart="@dimen/tvMarginTopBottomStartEndAll"
                android:layout_weight="1"
                android:background="@drawable/grayborder"
                android:drawableLeft="@mipmap/imgpassenger"
                android:drawablePadding="@dimen/tvSearchCarsPaddingTopBottom"
                android:gravity="fill"
                android:hint="@string/passengers"
                android:inputType="text"
                android:paddingStart="@dimen/tvPopupMarginTop"
                android:textColor="@color/black"
                android:textSize="@dimen/etSignInUserPassSize" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvBookSearchCars"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btSignUpAllheight"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/tvSearchAllMargin"
            android:background="@drawable/yellow"
            android:gravity="center"
            android:text="@string/searchcar"
            android:textColor="@color/white"
            android:textSize="@dimen/btSizeAll" />

    </LinearLayout>
</ScrollView>

