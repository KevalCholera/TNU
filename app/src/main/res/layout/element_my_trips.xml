                android:layout_width="@dimen/tvMarginTopBottomStartEndAll"
                android:layout_height="@dimen/tvMarginTopBottomStartEndAll"
                android:layout_marginLeft="@dimen/tvPopupCancelRidePadding"
                android:layout_marginRight="@dimen/tvPopupCancelRidePadding"
