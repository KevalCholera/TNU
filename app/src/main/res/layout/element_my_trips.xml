                android:layout_width="@dimen/tvElementMyTripStatusWidth"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:paddingLeft="@dimen/etPaddingAll"
                android:paddingRight="@dimen/etPaddingAll"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/lyElementLostItemFromToMarginStart"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from_"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/etSignUpSizeAll" />

                            <TextView
                                android:id="@+id/tvElementMyTripsFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:textColor="@color/heading"
                                android:textSize="@dimen/etSignUpSizeAll" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/lyElementLostItemToMarginStart"
                            android:layout_marginTop="@dimen/lyElementLostItemLostMarginStartTop"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to_"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/etSignUpSizeAll" />

                            <TextView
                                android:id="@+id/tvElementMyTripsTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:textColor="@color/heading"
                                android:textSize="@dimen/etSignUpSizeAll" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/car_blue" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vHeightWidthAll"
                    android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                    android:layout_marginTop="@dimen/vMarginTopBottomAll"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/tvMarginTopBottomStartEndAll"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvElementMyTripsTaxiProvider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/heading"
                            android:textSize="@dimen/etSignUpSizeAll" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/taxi_provider"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/vHeightWidthAll"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/tvPopupCancelRidePadding"
                        android:layout_marginTop="@dimen/tvPopupCancelRidePadding"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvElementMyTripsDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/heading"
                            android:textSize="@dimen/etSignUpSizeAll" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/datetime"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/vHeightWidthAll"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/tvPopupCancelRidePadding"
                        android:layout_marginTop="@dimen/tvPopupCancelRidePadding"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvElementMyTripsAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/heading"
                            android:textSize="@dimen/etSignUpSizeAll" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/total_fare"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
