<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/imgsearcharea" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvElementGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/tvElementCardListMarginStartEnd5"
            android:textColor="#686868"
            android:textSize="@dimen/btSignInSignInSize"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvElementGoogle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tvElementCardListMarginStartEnd5"
            android:textColor="@color/details"
            android:textSize="@dimen/vSignInPasswordMarginStart" />
    </LinearLayout>

</LinearLayout>
