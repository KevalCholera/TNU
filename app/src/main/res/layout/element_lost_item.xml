<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyElementLostItemMain"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/element"
    android:orientation="vertical"
    android:paddingEnd="@dimen/lyPaddingMainAll"
    android:paddingStart="@dimen/lyPaddingMainAll"
    android:paddingTop="@dimen/tvPopupMarginTop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lyElementLostItemLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/lyElementMyTripCircularViewMarginLeftRight"
            android:background="@color/white"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/lyElementLostItemStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vElementLostItemMarginBottom"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lyElementLostItemFromToMarginStart"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/lyElementLostItemFromToMarginEnd"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From : "
                            android:textColor="@color/background"
                            android:textSize="@dimen/etSignUpSizeAll" />

                        <TextView
                            android:id="@+id/tvLostItemFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solihull Rd, Shiral,Sohill, West Midland B90s 3LG, UK "
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/lyElementLostItemFromToMarginEnd"
                        android:layout_marginStart="@dimen/lyElementLostItemToMarginStart"
                        android:layout_marginTop="@dimen/lyElementLostItemLostMarginStartTop"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To : "
                            android:textColor="@color/background"
                            android:textSize="@dimen/etSignUpSizeAll" />

                        <TextView
                            android:id="@+id/tvLostItemTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Battern Parks Rd, London SW8, UK "
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLostItemProvider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lyft LLC"
                        android:textSize="@dimen/etSignUpSizeAll" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:text="Taxi Provider"
                        android:textColor="@color/background"
                        android:textSize="@dimen/etSignUpSizeAll" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/vHeightWidthAll"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLostItemDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10.02.2016 10:30am"
                        android:textSize="@dimen/etSignUpSizeAll" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:text="Date &amp; Time"
                        android:textColor="@color/background"
                        android:textSize="@dimen/etSignUpSizeAll" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/vHeightWidthAll"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLostItemStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Open"
                        android:textSize="@dimen/etSignUpSizeAll" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:text="Status"
                        android:textColor="@color/background"
                        android:textSize="@dimen/etSignUpSizeAll" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/lyElementLostItemLostItemMarginEnd"
                android:layout_marginStart="@dimen/lyElementLostItemLostMarginStartTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost Item : "
                    android:textColor="@color/background"
                    android:textSize="@dimen/etSignUpSizeAll" />

                <TextView
                    android:id="@+id/tvLostItemLostItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tvElementLostItemMarginStart"
                    android:gravity="center"
                    android:text="White color Handbag and Black color wallet "
                    android:textSize="@dimen/etSignUpSizeAll" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lyElementLostItemFromToMarginStart"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TNR : "
                    android:textColor="@color/background"
                    android:textSize="@dimen/etSignUpSizeAll" />

                <TextView
                    android:id="@+id/tvLostItemTNR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tvElementLostItemMarginStart"
                    android:text="tnu123456789 "
                    android:textSize="@dimen/etSignUpSizeAll" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@color/background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vElementLostItemHeight"
                android:background="@color/element" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyElementLostItemRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/lyElementMyTripCircularViewMarginLeftRight"
            android:background="@color/white"
            android:orientation="vertical" />

    </LinearLayout>
</LinearLayout>
