<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <ListView
        android:id="@+id/lvCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbarStyle="@null" />

    <Button
        android:id="@+id/btCardAddCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btSignUpAllheight"
        android:layout_marginBottom="@dimen/tvMarginTopBottomStartEndAll"
        android:layout_marginRight="@dimen/btCardButtonMargin"
        android:layout_marginLeft="@dimen/btCardButtonMargin"
        android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
        android:background="@drawable/blue_stroke_gray_solid"
        android:text="@string/add_card"
        android:visibility="gone"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/btSignInSignInSize" />


    <Button
        android:id="@+id/btCardDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btSignUpAllheight"
        android:background="@color/Yellow"
        android:text="PAY"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/btSizeAll" />
</LinearLayout>
