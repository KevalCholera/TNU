<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clEventBooking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="com.smartsense.taxinearyou.EventBooking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/element_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/lyPaddingMainAll">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name_"
                    android:textColor="@color/background" />

                <EditText
                    android:id="@+id/etEventBookingFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/grayborder"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:hint="@string/enter_first_name"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/etSignUpSizeAll" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:text="@string/last_name_"
                    android:textColor="@color/background" />

                <EditText
                    android:id="@+id/etEventBookingLastName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/grayborder"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:hint="@string/enter_last_name"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/etSignUpSizeAll" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:text="@string/email_add_"
                    android:textColor="@color/background" />

                <EditText
                    android:id="@+id/etEventBookingEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/grayborder"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/etSignUpSizeAll" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:text="@string/contact_number_"
                    android:textColor="@color/background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="@dimen/etHeightAll"

                        android:layout_marginRight="@dimen/etSignUpPersonNameMarginEnd"
                        android:layout_marginTop="@dimen/etSignUpPersonNameMarginEnd"
                        android:background="@drawable/darkgrayborder"
                        android:cursorVisible="false"
                        android:digits="1234567890"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="10"
                        android:text="+44"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/etSignUpSizeAll" />


                    <EditText
                        android:id="@+id/etEventBookingContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/etHeightAll"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@drawable/grayborder"
                        android:digits="01234567890"
                        android:hint="@string/enter_contact_no"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/etSignUpSizeAll" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:text="@string/pickup_"
                    android:textColor="@color/background" />

                <EditText
                    android:id="@+id/etEventBookingPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/grayborder"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etSignUpSizeAll" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:text="@string/drop_off_"
                    android:textColor="@color/background" />

                <EditText
                    android:id="@+id/etEventBookingEventDropOff"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/grayborder"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etSignUpSizeAll" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:text="@string/trip_type"
                    android:textColor="@color/background" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbEventBookingOneWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_event_booking"
                        android:checked="true"
                        android:text="@string/single"
                        android:textColor="@color/background" />

                    <RadioButton
                        android:id="@+id/rbEventBookingReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/rbMarginTopBottomStartEndAll"
                        android:button="@drawable/radio_button_event_booking"
                        android:text="@string/returns"
                        android:textColor="@color/background" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/tvMarginTopBottomStartEndAll"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/date_amp_time_"
                            android:textColor="@color/background" />

                        <EditText
                            android:id="@+id/etEventBookingDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/etHeightAll"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/grayborder"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tvMarginTopBottomStartEndAll"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/event_duration"
                            android:textColor="@color/background" />

                        <EditText
                            android:id="@+id/etEventBookingEventDuration"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/etHeightAll"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/grayborder"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                            android:textColor="@color/hintColor"
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/tvMarginTopBottomStartEndAll"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/people"
                            android:textColor="@color/background" />

                        <EditText
                            android:id="@+id/etEventBookingPassengers"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/etHeightAll"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/grayborder"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tvMarginTopBottomStartEndAll"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/luggage_"
                            android:textColor="@color/background" />

                        <EditText
                            android:id="@+id/etEventBookingEventLuggage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/etHeightAll"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/grayborder"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/etSignUpSizeAll" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lyPadding10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_type_"
                        android:textColor="@color/background" />

                    <EditText
                        android:id="@+id/etEventBookingVehicleType"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/etHeightAll"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@drawable/grayborder"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/etSignUpSizeAll" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tvMarginTopBottomStartEndAll"
                    android:text="@string/any_other_requirement"
                    android:textColor="@color/background" />

                <EditText
                    android:id="@+id/etEventBookingReq"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etLongTextHeightAll"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/grayborder"
                    android:gravity="top"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/etSignUpAllPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/etSignUpSizeAll" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btEventBookingBookNow"
                android:layout_width="0dp"
                android:layout_height="@dimen/btSignInSignUpHeight"
                android:layout_weight="1"
                android:background="@drawable/yellow_without_corner"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/buttonGeneral" />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>