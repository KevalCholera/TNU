<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clPopUpMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyPopUpAlternateEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/lyPaddingMainAll"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/alternate_email"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_margin="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_alternate_email"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <EditText
                android:id="@+id/etPopupSecurityAlternateEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_gravity="center"
                android:background="@drawable/grayborder"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/etSignInUserPassSize"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvPopupMarginTop"
                android:text="@string/confirm_alternate_email"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <EditText
                android:id="@+id/etPopupSecurityConfirmAlternateEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_gravity="center"
                android:background="@drawable/grayborder"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/etSignInUserPassSize"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btPopupSecurityAlternateEmailSubmit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btSignUpAllheight"
                android:layout_marginBottom="@dimen/btPopupSubmitMarginTopBottom"
                android:layout_marginTop="@dimen/btPopupSubmitMarginTopBottom"
                android:background="@color/background"
                android:gravity="center"
                android:paddingLeft="@dimen/btPopupSubmitPaddingLeftRight"
                android:paddingRight="@dimen/btPopupSubmitPaddingLeftRight"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/tvTitlesSizeAll" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyPopUpEmail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/lyPaddingMainAll"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/email"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_email"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <EditText
                android:id="@+id/etPopupSecurityEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_gravity="center"
                android:background="@drawable/grayborder"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/etSignInUserPassSize"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvPopupMarginTop"
                android:text="@string/confirm_email"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <EditText
                android:id="@+id/etPopupSecurityConfirmEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_gravity="center"
                android:background="@drawable/grayborder"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/etSignInUserPassSize"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btPopupSecurityEmailSubmit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btSignUpAllheight"
                android:layout_marginTop="@dimen/btPopupSubmitMarginTopBottom"
                android:background="@color/background"
                android:gravity="center"
                android:paddingLeft="@dimen/btPopupSubmitPaddingLeftRight"
                android:paddingRight="@dimen/btPopupSubmitPaddingLeftRight"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/tvTitlesSizeAll" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyPopUpSecurityOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/tvPopupMarginTop"
                android:text="@string/select_from_the_options_below"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginEnd="@dimen/vPopupMarginStartEnd"
                android:layout_marginStart="@dimen/vPopupMarginStartEnd"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvPopupMarginTop"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbPopupSecurityOptionsEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_popup"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbPopupSecurityOptionsAlternateEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_popup" />

                    <RadioButton
                        android:id="@+id/rbPopupSecurityOptionsQuestions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@drawable/radio_button_popup"
                        android:gravity="center" />


                </RadioGroup>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyPopupSecurityOptionsEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lyPopupSecurityOptionsEmailMarginTop"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_email_to_primary_email_address"
                            android:textSize="@dimen/rbRadioTextSize" />

                        <TextView
                            android:id="@+id/tvPopupSecurityOptionsEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kevalcholeracholera_gmail_com"
                            android:textSize="@dimen/rbRadioTextSize"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyPopupSecurityOptionsAlternateEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lyPopupSecurityOptionsAlternateEmailMarginTop"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_email_to_alternate_email_address"
                            android:textSize="@dimen/rbRadioTextSize" />

                        <TextView
                            android:id="@+id/tvPopupSecurityOptionsAlternateEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kevalcholeracholera369_gmail_com"
                            android:textSize="@dimen/rbRadioTextSize"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_security_question"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btPopupSecurityOptionsSubmit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btSignUpAllheight"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/btPopupSubmitMarginTopBottom"
                android:layout_marginTop="@dimen/btPopupSubmitMarginTopBottom"
                android:background="@color/background"
                android:gravity="center"
                android:paddingLeft="@dimen/btPopupSubmitPaddingLeftRight"
                android:paddingRight="@dimen/btPopupSubmitPaddingLeftRight"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/tvTitlesSizeAll" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyPopUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/lyPaddingMainAll"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tvPopupMarginTop"
                android:gravity="center"
                android:text="@string/new_password"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_new_password"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <EditText
                android:id="@+id/etPopupSecurityPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_gravity="center"
                android:background="@drawable/grayborder"
                android:inputType="textPassword"
                android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/etSignInUserPassSize"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvPopupMarginTop"
                android:text="@string/confirm_password"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <EditText
                android:id="@+id/etPopupSecurityConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_gravity="center"
                android:background="@drawable/grayborder"
                android:inputType="textPassword"
                android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/etSignInUserPassSize" />

            <Button
                android:id="@+id/btPopupSecurityPasswordSubmit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btSignUpAllheight"
                android:layout_marginBottom="@dimen/btPopupSubmitMarginTopBottom"
                android:layout_marginTop="@dimen/btPopupSubmitMarginTopBottom"
                android:background="@color/background"
                android:gravity="center"
                android:paddingLeft="@dimen/btPopupSubmitPaddingLeftRight"
                android:paddingRight="@dimen/btPopupSubmitPaddingLeftRight"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/tvTitlesSizeAll" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyPopUpQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/lyPaddingMainAll"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvPopupMarginTop"
                android:gravity="center"
                android:text="@string/answer_security_question"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_margin="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q.)"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <TextView
                    android:id="@+id/tvPopupSecurityQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tvPopupSecurityQuestionMarginStart"
                    android:text="@string/in_which_city_or_town_was_your_first_job"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/tvTitlesSizeAll" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lyPopupSecurityAnswerMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/a"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <EditText
                    android:id="@+id/etPopupSecurityQuestionAnswer1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/etPopupSecurityQuestionChangeAnswerMarginStart"
                    android:background="@drawable/grayborder"
                    android:inputType="text"
                    android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/etSignInUserPassSize"
                    android:textStyle="italic" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvPopupMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q"
                    android:textSize="@dimen/tvTitlesSizeAll" />


                <TextView
                    android:id="@+id/tvPopupSecurityQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tvPopupSecurityQuestionMarginStart"
                    android:text="@string/in_which_city_or_town_did_your_mother_and_father_meet"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/tvTitlesSizeAll" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lyPopupSecurityAnswerMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/a"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <EditText
                    android:id="@+id/etPopupSecurityQuestionAnswer2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/etPopupSecurityQuestionChangeAnswerMarginStart"
                    android:background="@drawable/grayborder"
                    android:inputType="text"
                    android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/etSignInUserPassSize"
                    android:textStyle="italic" />
            </LinearLayout>

            <Button
                android:id="@+id/btPopupSecurityQuestionConfirm"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btSignUpAllheight"
                android:layout_marginBottom="@dimen/btPopupSubmitMarginTopBottom"
                android:layout_marginTop="@dimen/btPopupSubmitMarginTopBottom"
                android:background="@color/background"
                android:gravity="center"
                android:paddingLeft="@dimen/btPopupSubmitPaddingLeftRight"
                android:paddingRight="@dimen/btPopupSubmitPaddingLeftRight"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/tvTitlesSizeAll" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyPopUpQuestionChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/lyPaddingMainAll"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/answer_security_question"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <EditText
                    android:id="@+id/etPopupSecurityQuestionChangeQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginStart="@dimen/etPopupSecurityQuestionChangeQuestionMarginStart"
                    android:background="@drawable/grayborder"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:drawableEnd="@mipmap/imgdropdown"
                    android:focusable="false"
                    android:padding="@dimen/etPopupSecurityQuestionChangeAnswerPadding"
                    android:text="@string/in_which_city_or_town_was_your_first_job"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/tvTitlesSizeAll"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lyPopupSecurityQuestionChangeAnswerMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/a"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <EditText
                    android:id="@+id/etPopupSecurityQuestionChangeAnswer1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginStart="@dimen/etPopupSecurityQuestionChangeAnswerMarginStart"
                    android:background="@drawable/grayborder"
                    android:padding="@dimen/etPopupSecurityQuestionChangeAnswerPadding"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/tvTitlesSizeAll"
                    android:textStyle="italic" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lyPopupSecurityQuestionChangeQuestionMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <EditText
                    android:id="@+id/etPopupSecurityQuestionChangeQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_marginStart="@dimen/etPopupSecurityQuestionChangeQuestionMarginStart"
                    android:background="@drawable/grayborder"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:drawableEnd="@mipmap/imgdropdown"
                    android:focusable="false"
                    android:padding="@dimen/etPopupSecurityQuestionChangeAnswerPadding"
                    android:text="@string/in_which_city_or_town_did_your_mother_and_father_meet"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/tvTitlesSizeAll"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lyPopupSecurityQuestionChangeAnswerMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/a"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <EditText
                    android:id="@+id/etPopupSecurityQuestionChangeAnswer2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/etHeightAll"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/etPopupSecurityQuestionChangeAnswerMarginStart"
                    android:background="@drawable/grayborder"
                    android:inputType="text"
                    android:padding="@dimen/etPopupSecurityQuestionChangeAnswerPadding"
                    android:paddingStart="@dimen/etSignUpAllPaddingStartEnd"
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/etSignInUserPassSize"
                    android:textStyle="italic" />
            </LinearLayout>

            <Button
                android:id="@+id/btPopupSecurityQuestionChangeConfirm"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btSignUpAllheight"
                android:layout_marginBottom="@dimen/btPopupSubmitMarginTopBottom"
                android:layout_marginTop="@dimen/btPopupSubmitMarginTopBottom"
                android:background="@color/background"
                android:gravity="center"
                android:paddingLeft="@dimen/btPopupSubmitPaddingLeftRight"
                android:paddingRight="@dimen/btPopupSubmitPaddingLeftRight"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/tvTitlesSizeAll" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyPopupBookSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/lyPaddingMainAll"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vHeightWidthAll"
                android:layout_marginBottom="@dimen/vMarginTopBottomAll"
                android:layout_marginTop="@dimen/vMarginTopBottomAll"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:layout_width="@dimen/ivPopImageWidthHeightAll"
                android:layout_height="@dimen/ivPopImageWidthHeightAll"
                android:layout_margin="@dimen/tvPopupMarginTop"
                android:src="@mipmap/like_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tvPopupMarginTop"
                android:gravity="center"
