<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/very_light_gray"
    android:orientation="horizontal"
    android:padding="@dimen/lyPadding10">

    <com.smartsense.taxinearyou.utill.CircleImageView1
        android:id="@+id/cvElementReviewCustomerPic"
        android:layout_width="@dimen/cvElementReviewWidthHeight"
        android:layout_height="@dimen/cvElementReviewWidthHeight"
        app:civ_border_color="@color/background"
        app:civ_border_width="@dimen/civTripDetailsBorderWidth" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvElementReviewCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lyPadding10"
                android:layout_marginRight="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/tvElementReviewTextSize" />

            <TextView
                android:id="@+id/tvElementReviewTimeSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/details"
                android:textSize="@dimen/tvElementReviewTextSize" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvElementReviewCustomerFeedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/lyPadding10"
            android:gravity="center_vertical"
            android:minLines="3"
            android:textColor="@color/heading"
            android:textSize="@dimen/tvElementReviewTextSize" />
    </LinearLayout>
</LinearLayout>
