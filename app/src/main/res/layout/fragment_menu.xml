<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/lyPadding10">

        <com.smartsense.taxinearyou.utill.CircleImageView1
            android:id="@+id/cvAccountPhoto"
            android:layout_width="@dimen/cvAccountPhotoWidthHeight"
            android:layout_height="@dimen/cvAccountPhotoWidthHeight"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/lyPadding10"
            android:src="@mipmap/imgtnulogo"
            app:civ_border_color="@color/Yellow"
            app:civ_border_width="@dimen/cvAccountPhoto" />

        <ImageView
            android:id="@+id/ivEditProfilePhoto"
            android:layout_width="@dimen/ivAccountPersonPhotoSmallHeightWidth"
            android:layout_height="@dimen/ivAccountPersonPhotoSmallHeightWidth"
            android:layout_alignRight="@+id/cvAccountPhoto"
            android:layout_alignTop="@+id/cvAccountPhoto"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ivEditProfilePhoto"
            android:src="@mipmap/img_edit" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvAccountPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/lyPadding10"
        android:textColor="@color/black"
        android:textSize="@dimen/tvAccountAllSize"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btAccountActivateNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/yellowborderaccount"
        android:paddingEnd="@dimen/btAccountActivateNowPaddingStartEnd"
        android:paddingStart="@dimen/btAccountActivateNowPaddingStartEnd"
        android:text="@string/active_now"
        android:textAllCaps="false"
        android:textColor="@color/heading"
        android:textSize="@dimen/tvTitlesSizeAll"
        android:visibility="gone" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccountGeneralInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lyAccountMarginTopAll"
                android:layout_marginRight="@dimen/tvAccountAllMarginStartEnd"
                android:layout_marginTop="@dimen/tvAccountAllMarginTop"
                android:drawableLeft="@mipmap/genreal_info"
                android:drawablePadding="@dimen/tvElementCardListMarginStartEnd5"
                android:gravity="fill"
                android:text="@string/general_info"
                android:textColor="@color/heading"
                android:textSize="@dimen/tvAccountAllSize" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vAccountAllHeight"
                android:layout_marginLeft="@dimen/vAccountAllStartEnd"
                android:layout_marginRight="@dimen/vAccountAllStartEnd"
                android:background="@color/light_Gray" />

            <TextView
                android:id="@+id/tvAccountAccountSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lyAccountMarginTopAll"
                android:layout_marginRight="@dimen/tvAccountAllMarginStartEnd"
                android:layout_marginTop="@dimen/tvAccountAllMarginTop"
                android:drawableLeft="@mipmap/acc_security"
                android:drawablePadding="@dimen/tvElementCardListMarginStartEnd5"
                android:gravity="fill"
                android:text="@string/acc_sec"
                android:textColor="@color/heading"
                android:textSize="@dimen/tvAccountAllSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vAccountAllHeight"
                android:layout_marginLeft="@dimen/vAccountAllStartEnd"
                android:layout_marginRight="@dimen/vAccountAllStartEnd"
                android:background="@color/light_Gray" />

            <TextView
                android:id="@+id/tvAccountPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lyAccountMarginTopAll"
                android:layout_marginRight="@dimen/tvAccountAllMarginStartEnd"
                android:layout_marginTop="@dimen/tvAccountAllMarginTop"
                android:drawableLeft="@mipmap/img_payment"
                android:drawablePadding="@dimen/tvAccountCredits"
                android:enabled="false"
                android:gravity="fill"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/lyPadding10"
                android:paddingTop="@dimen/margin_5"
                android:text="@string/payment"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/tvAccountAllSize" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vAccountAllHeight"
                android:layout_marginLeft="@dimen/vAccountAllStartEnd"
                android:layout_marginRight="@dimen/vAccountAllStartEnd"
                android:background="#90cacaca" />

            <TextView
                android:id="@+id/tvAccountCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lyAccountMarginTopAll"
                android:layout_marginRight="@dimen/tvAccountAllMarginStartEnd"
                android:layout_marginTop="@dimen/tvAccountAllMarginTop"
                android:drawableLeft="@mipmap/img_free_rides"
                android:drawablePadding="@dimen/tvAccountCredits"
                android:gravity="fill"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/lyPadding10"
                android:paddingTop="@dimen/margin_5"
                android:text="@string/Credits"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/tvAccountAllSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vAccountAllHeight"
                android:layout_marginLeft="@dimen/vAccountAllStartEnd"
                android:layout_marginRight="@dimen/vAccountAllStartEnd"
                android:background="@color/light_Gray"
                android:textColor="#90cacaca" />

            <TextView
                android:id="@+id/tvAccountLostItems"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginLeft="@dimen/lyAccountMarginTopAll"
                android:layout_marginRight="@dimen/tvAccountAllMarginStartEnd"
                android:layout_marginTop="@dimen/tvAccountAllMarginTop"
                android:drawableLeft="@mipmap/imglostitems"
                android:drawablePadding="@dimen/tvAccountDrawablePaddingAll"
                android:gravity="fill"
                android:text="@string/lostitems"
                android:textColor="@color/heading"
                android:textSize="@dimen/tvAccountAllSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vAccountAllHeight"
                android:layout_marginLeft="@dimen/vAccountAllStartEnd"
                android:layout_marginRight="@dimen/vAccountAllStartEnd"
                android:background="@color/light_Gray"
                android:textColor="#90cacaca" />

            <TextView
                android:id="@+id/tvAccountMore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeightAll"
                android:layout_marginLeft="@dimen/lyAccountMarginTopAll"
                android:layout_marginRight="@dimen/tvAccountAllMarginStartEnd"
                android:layout_marginTop="@dimen/tvAccountAllMarginTop"
                android:drawableLeft="@mipmap/ic_more_"
                android:drawablePadding="@dimen/tvAccountDrawablePaddingAll"
                android:gravity="fill"
                android:text="@string/more"
                android:textColor="@color/heading"
                android:textSize="@dimen/tvAccountAllSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vAccountAllHeight"
                android:layout_marginLeft="@dimen/vAccountAllStartEnd"
                android:layout_marginRight="@dimen/vAccountAllStartEnd"
                android:background="@color/light_Gray" />

            <TextView
                android:id="@+id/tvAccountLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lyAccountMarginTopAll"
                android:layout_marginRight="@dimen/tvAccountAllMarginStartEnd"
                android:layout_marginTop="@dimen/tvAccountAllMarginTop"
                android:drawableLeft="@mipmap/img_login_logout"
                android:drawablePadding="@dimen/tvElementCardListMarginStartEnd10"
                android:gravity="fill"
                android:text="@string/logout"
                android:textColor="@color/heading"
                android:textSize="@dimen/tvAccountAllSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vAccountAllHeight"
                android:layout_marginLeft="@dimen/vAccountAllStartEnd"
                android:layout_marginRight="@dimen/vAccountAllStartEnd"
                android:background="@color/light_Gray" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
