<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/padding_16"
    android:paddingStart="@dimen/padding_16"
    android:id="@+id/llElementCardListCard"
    android:paddingTop="@dimen/lyPadding10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvElementCardListCardNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btSignUpAllheight"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/card_pay"
            android:drawablePadding="@dimen/tvPaymentDetailsDrawableCashPadding"
            android:gravity="fill"
            android:text="xxxx xxxx xxxx 1234"
            android:textColor="@color/black"
            android:textSize="@dimen/heading" />

        <CheckBox
            android:id="@+id/cbCardSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_button_event_booking"
            android:checked="true"
            android:visibility="visible" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vHeightWidthAll"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/line_color" />


</LinearLayout>