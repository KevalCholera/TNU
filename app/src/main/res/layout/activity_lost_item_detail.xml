<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="@dimen/lyPaddingMainAll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lyLostItemDetailsTNRMarginStart"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tnr"
            android:textColor="@color/background"
            android:textSize="@dimen/tvTitlesSizeAll" />

        <TextView
            android:id="@+id/tvLostItemDetailTNR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tvLostItemDetailsMarginStart"
            android:text="@string/tnu123456789"
            android:textSize="@dimen/tvTitlesSizeAll" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vHeightWidthAll"
        android:layout_marginBottom="@dimen/vMarginTopBottomAll"
        android:layout_marginTop="@dimen/vMarginTopBottomAll"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lyLostItemDetailsFromMarginStart"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from_"
                    android:textColor="@color/background"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <TextView
                    android:id="@+id/tvLostItemDetailFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solihull_rd_shiral_sohill_west_midland_b90s_3lg_uk"
                    android:textSize="@dimen/tvTitlesSizeAll" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/lyLostItemDetailsToMarginStart"
                android:layout_marginTop="@dimen/lyLostItemDetailsToMarginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to_"
                    android:textColor="@color/background"
                    android:textSize="@dimen/tvTitlesSizeAll" />

                <TextView
                    android:id="@+id/tvLostItemDetailTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/battern_parks_rd_london_sw8_uk"
                    android:textSize="@dimen/tvTitlesSizeAll" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/imgtab1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vHeightWidthAll"
        android:layout_marginBottom="@dimen/vMarginTopBottomAll"
        android:layout_marginTop="@dimen/vMarginTopBottomAll"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLostItemDetailProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lytfllc"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/taxi_provider"
                android:textColor="@color/background"
                android:textSize="@dimen/tvTitlesSizeAll" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/vHeightWidthAll"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLostItemDetailDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_10_02_2016_10_30am"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/date_amp_time"
                android:textColor="@color/background"
                android:textSize="@dimen/tvTitlesSizeAll" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/vHeightWidthAll"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLostItemDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/open"
                android:textSize="@dimen/tvTitlesSizeAll" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/status"
                android:textColor="@color/background"
                android:textSize="@dimen/tvTitlesSizeAll" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vHeightWidthAll"
        android:layout_marginTop="@dimen/vMarginTopBottomAll"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginStart="@dimen/lyLostItemDetailsMarginTopStart"
        android:layout_marginTop="@dimen/lyLostItemDetailsMarginTopStart"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lost_item"
            android:textColor="@color/background"
            android:textSize="@dimen/tvTitlesSizeAll" />

        <TextView
            android:id="@+id/tvLostItemDetailLostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tvLostItemDetailsMarginStart"
            android:gravity="center"
            android:text="@string/white_color_handbag_and_black_color_wallet"
            android:textSize="@dimen/tvTitlesSizeAll" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vHeightWidthAll"
        android:layout_marginBottom="@dimen/vMarginTopBottomAll"
        android:layout_marginTop="@dimen/vMarginTopBottomAll"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvLostItemDetailStatusDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/very_light_gray"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/tvHeadingSizeAll"
        android:text="@string/we_have_found_your_item_amp_soon_be_delivered_to_you"/>


</LinearLayout>
